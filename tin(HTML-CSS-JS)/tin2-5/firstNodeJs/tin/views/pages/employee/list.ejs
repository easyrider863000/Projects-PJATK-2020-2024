<%- include('../../fragments/header.ejs') %>
        <main>
            <h2>Lista pracownikow</h2>
            <table class="table-list">
                <thead>
                    <tr>
                        <th>Imie</th>
                        <th>Nazwisko</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Data urodziny</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
            <% for (let emp of emps) { %>
                    <tr>
                        <td><%= emp.firstName %></td>
                        <td><%= emp.secondName %></td>
                        <td><%= emp.email %></td>
                        <td><%= emp.phoneNumber %></td>
                        <td><%= emp.birthdate ? emp.birthdate.toISOString().split('T')[0] : '' %></td>
                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a href="/employee/details/<%= emp._id %>" class="list-actions-button-details">Szegoly</a>
                                </li>
                                <li>
                                    <a href="/employee/edit/<%= emp._id %>" class="list-actions-button-edit">Edytuj</a>
                                </li>
                                <li>
                                    <a href="/employee/delete/<%= emp._id %>" class="list-actions-button-delete">Usun</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
            <% } %>
                </tbody>
            </table>
            <p><a href="/employee/add" class="button-add">Dodaj nowego pracownika</a></p>
        </main>
<%- include('../../fragments/footer.ejs') %>